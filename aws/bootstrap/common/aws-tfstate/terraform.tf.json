{
   "provider": {
      "aws": {
         "region": "eu-central-1",
         "version": "~> 3.1.0"
      }
   },
   "resource": {
      "aws_dynamodb_table": {
         "tfstate_lock": {
            "attribute": {
               "name": "LockID",
               "type": "S"
            },
            "hash_key": "LockID",
            "name": "kc-playground-aws-tfstate-lock",
            "read_capacity": 1,
            "write_capacity": 1
         }
      },
      "aws_s3_bucket": {
         "tfstate": {
            "acl": "private",
            "bucket": "kc-playground-aws-tfstate",
            "lifecycle": {
               "prevent_destroy": true
            },
            "server_side_encryption_configuration": {
               "rule": {
                  "apply_server_side_encryption_by_default": {
                     "sse_algorithm": "AES256"
                  }
               }
            },
            "versioning": {
               "enabled": true
            }
         }
      }
   },
   "terraform": {
      "backend": {
         "s3": {
            "bucket": "kc-playground-aws-tfstate",
            "dynamodb_table": "kc-playground-aws-tfstate-lock",
            "key": "bootstrap/common/aws-tfstate/terraform.tfstate",
            "region": "eu-central-1"
         }
      }
   }
}
